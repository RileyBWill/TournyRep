{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "declaration": false,
    "jsx": "react",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
